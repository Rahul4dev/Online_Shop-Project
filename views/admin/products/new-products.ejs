<%- include('../../shared/includes/head', { pageTitle: 'Add New Products' }) %> 
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Add new Products</h1>
        <form action="/admin/products?_csrf=<%= locals.csrfToken %>" method="post" enctype="multipart/form-data"> 
            <!-- multipart coz of image upload, added csrf token by this method coz we can't add that in multipart encoded type -->
            <p>
                <label for="title">Title</label>
                <input type="text" id="title" name="title" required>
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/png, image/jpg" required>
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" name="summary" required maxlength="250">
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" id="price" name="price"  min="10" step="10" required>
            </p>
            <p>
                <label for="description">Description</label>
                <textarea name="description" id="description"  rows="7" required></textarea>
            </p>

            <p>
                <button type="reset" class="btn btn-alt">Reset</button>
                <button class="btn">Save</button>
            </p>
        </form>
    </main>
<%- include('../../shared/includes/footer') %>
